{
  "compilerOptions": {
    "target": "ESNext",
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declarationDir": "../types/electron",
  },
  "typedocOptions": {
    "entryPoints": [
      "main/index.ts"
    ],
    "out": "docs",
  },
  "include": [
    "./main/*",
    "./preload/*",
    "./ipcApi.ts",
    "./electron-env.d.ts"
  ],
}
